{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2016",
    "jsx": "preserve",
    "checkJs": true,
    "paths": {
      "@*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["./public/assets/*"],
      "@features/*": ["./src/features/*"],
      "@shared/*": ["./src/shared/*"]
    }
  }
}
